{% for dialog in dialogs %}
    <div class="singleDialog" data-dialog="{{ dialog.getId() }}">
        <div class="dialogUsername">
            {% if dialog.user1==curUser %}
                {{ dialog.user2.getNick() }}
            {% else %}
                {{ dialog.user1.getNick() }}
            {% endif %}
        </div>
        <div class="messagesAmount">{{ dialog.unreads }}</div>
        <div class="closeDialogs"><a title="{% trans %}закрыть диалог{% endtrans %}" href=""></a></div>
        <div class="spamDialogs"><a title="{% trans %}отметить как спам{% endtrans %}" href=""></a></div>
    </div>
{% endfor %}