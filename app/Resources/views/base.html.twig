<!DOCTYPE html>
<html>
  <head>
    {#<title>{{ title }}</title>#}
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/reset.css" rel="stylesheet">
	<link href="/css/jquery-ui-1.9.2.custom.css" rel="stylesheet" />
	<link rel="stylesheet" href="/css/tinyeditor.css">
	<script src="/js/jquery.js"></script>
	<script src="/js/jquery.validate.min.js"></script>
	<script src="/js/jquery.form.js"></script>
	<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
	<script src="/js/jquery.autosize-min.js"></script>
    <script src="/js/chat.js"></script>
	<script src="/js/tiny.editor.packed.js"></script>
    <script src="/js/script.js"></script>
  </head>
  <body>
  
  {% set _locale = app.getSession().get('_locale') %}
	{% block wrapper %}
	<div id="wrapper">
	    {% block header %}
		<div id="header">
			<div class="logo" title="{% trans %}На главную{% endtrans %}"><a href="{{ path('index') }}"></a></div>
            <div id="header-srvmsg"></div>
			<div class="language">
				<div class="russian{% if _locale=='ru_RU' or _locale==null %} active{% endif %}" title="{% trans %}русский{% endtrans %}"><a href="{{ path('locale', { 'locale': 'ru_RU' }) }}"></a></div>
				<div class="english{% if _locale=='en_US' %} active{% endif %}" title="{% trans %}английский{% endtrans %}"><a href="{{ path('locale', { 'locale': 'en_US' }) }}"></a></div>
				<div class="portuguese{% if _locale=='pt_PT' %} active{% endif %}" title="{% trans %}португальский{% endtrans %}"><a href="{{ path('locale', { 'locale': 'pt_PT' }) }}"></a></div>
			</div>
			<div class="users">
				<p><span>{{ totalUserCount }}</span><span class="onSite">{% trans %}На сайте{% endtrans %}</span></p>
				<p><span>{{ onlineUserCount }}</span><span class="online">{% trans %}В сети{% endtrans %}</span></p>
			</div>
		</div>
	    {% endblock %}
		
	    {% block navigation %}
		<div id="nav">
			<div class="orderQuestions"><a href="{{ path('index') }}">{% trans %}Главная{% endtrans %}</a></div>
			<div class="categoryQuestions"><a href="{{ path('category') }}">{% trans %}по категориям{% endtrans %}</a></div>
			<div class="expressQuestions"><a href="{{ path('rush') }}">{% trans %}срочные{% endtrans %}</a></div>
		</div>
	    {% endblock %}
		
	    {% block userPrifile %}
		<div class="usersProfile">
		    {% if curUser %}
			<p class="name">{{ curUser.nick }}</p>
			<form action="{{ path('logout') }}" class="profileNavigation" name="profileNavigation" action="" method="post">
				<input type="submit"  value="{% trans %}Выйти{% endtrans %}" />
			</form>
			<form class="profileNavigation">
				{#<input type="submit" value="{% trans %}Настройки{% endtrans %}" />#}
				<a href="/settings">{% trans %}Настройки{% endtrans %}</a>
			</form>
			<p class="credits"><a href="/credits">{% trans %}Кредиты{% endtrans %} {{ curUser.getCredits() }}</a></p>
			<p class="myQuestions"><a href="/my">{% trans %}Мои вопросы{% endtrans %}</a></p>
			<p class="myQuestions"><a href="/income">{% trans %}Входящие вопросы{% endtrans %}</a></p>
			{% else %}
			<form action="{{ path('login_check') }}" method="post">
				<input type="text" id="username" name="_username" value="" placeholder="{% trans %}логин{% endtrans %}" />

				<input type="password" id="password" name="_password" placeholder="{% trans %}пароль{% endtrans %}" />

				<input class="enterButton" type="submit" name="login" value="{% trans %}Войти{% endtrans %}" />
			</form>
			<form action="{{ path('register') }}" style="height: 0px;" type="text">
				<input class="registerButtonOnIndex" type="submit" name="" value="{% trans %}Регистрация{% endtrans %}" />
			</form>
			<a class="forgotPassword" href="{{ path('forgot_password') }}">{% trans %}Забыли пароль?{% endtrans %}</a>
            {% endif %}
		</div>
		
		<div style="clear: both"></div>
	    {% endblock %}
		
		<div id="main">
		{% block content %}
		{% endblock %}
            <div class="dialogsWrapper" style="display:none;">
                <div class="closeDialogWindow"><a href=""></a></div>
                <h2 class="dialogTitle">{% trans %}Диалоги{% endtrans %}</h2>
                <div class="dialogs-container"></div>
            </div>

            <div class="chatInviteWindow" style="display:none;">
                <div class="closeInviteWindow"><a href=""></a></div>
                <h2 class="chatInviteTitle">{% trans %}Приглашения в чат{% endtrans %}</h2>
                <div class="invites-container"></div>
            </div>
			<script>
			$(document).ready(function() {
				$( ".userLinkAddWindow" ).draggable();
				$(".feedbackWindow").draggable();
								
				$('#feedback-type').change(function () {
					var check = $('#feedback-type').val();
					if (check == 'appeal') {
						$('#feedback-text').attr('disabled', false);
					}
					else if (check == 'idea') {
						$('#feedback-text').attr('disabled', false);
					}
					else {
						$('#feedback-text').attr('disabled', true);					
					}
				});				
			});
			</script>
            <div class="userLinkAddWindow" style="display:none;">
                <div class="closeUserLinkWindow"><a href=""></a></div>
                <form action="/ajax/newUserLink" method="post">
                    <label for="user-link-title">Название:</label> <input type="text" maxlength="15" id="user-link-title" name="title"><span>Масимум 15 символов</span><br/>
					<div style="clear: both;"></div>
                    <label for="user-link-url">Ссылка:</label> <input type="text" id="user-link-url" name="url">
                    <input type="button" class="cancelUserLink" value="отменить"> <input type="submit" class="saveUserLink" value="сохранить">
                </form>
            </div>

            <div class="feedbackWindow" style="display:none;">
                <div class="closeFeedbackWindow"><a href=""></a></div>
				<h3>{% trans %}Выберите категорию:{% endtrans %}</h3>
                <form action="/ajax/sendFeedback" method="post">
                    <select name="type" id="feedback-type">
						<option selected="selected"></option>
                        <option value="appeal">Жалоба</option>
                        <option value="idea">Предложение</option>
                    </select><br>
                    <label for="feedback-email">Введите Ваш email</label><br/><input id="feedback-email" name="email" value="{% if curUser %}{{ curUser.getUsername() }}{% endif %}"><br/>
                    <label for="feedback-text">Введите текст сообщения:</label><br/><textarea disabled="disabled" name="text" id="feedback-text" cols="30" rows="5"></textarea><br/>
                    <input type="button" class="cancel-feedback" value="отмена"> <input type="submit" class="submit-feedback" value="отправить">
                </form>
            </div>
		</div>
		
	    {% block menu %}		
		<div id="menu">
			<ul class="menuNavigation">
				<li>{% trans %}Вопросы{% endtrans %}
					<ul class="subMenuNavigation">
					  <li><a href="/category/2">семья, дом, дети</a></li>
					  <li><a href="/category/3">любовь, отношения</a></li>
					  <li><a href="/category/5">культура, досуг</a></li>
					  <li><a href="/category/6">туризм</a></li>
					  <li><a href="/category/7">компьютеры, интернет</a></li>
					  <li><a href="/category/8">компьютерные игры</a></li>
					  <li><a href="/category/9">техника</a></li>
					  <li><a href="/category/10">знакомства, общение</a></li>
					  <li><a href="/category/11">экономика</a></li>
					  <li><a href="/category/12">юриспруденция</a></li>
					  <li><a href="/category/13">опросы</a></li>
					  <li><a href="/category/14">новости</a></li>
					  <li><a href="/category/15">спорт</a></li>
					</ul>
				</li>
				<li>{% trans %}Заметки{% endtrans %}
                    <ul class="subMenuNavigation">
					{% if curUser %}
                        <li><a href="/notes/questions">{% trans %}вопросы{% endtrans %}</a></li>
                        <li><a href="/notes/articles">{% trans %}статьи{% endtrans %}</a></li>
                        <li><a href="#" class="open-notepad">{% trans %}блокнот{% endtrans %}</a></li>
					{% endif %}
                    </ul>
                </li>
				<li>{% trans %}Информация{% endtrans %}
                    <ul class="subMenuNavigation">
                        <li><a href="/articles">{% trans %}статьи{% endtrans %}</a></li>
                        {#{% for link in curUser.getUserLinks() %}
                            <li><a href="{{ link.getUrl() }}">{{ link.getTitle() }}</a></li>
                        {% endfor %}#}
						{% if curUser %}
                        <li style="	background-color: #fdf5ef; border-radius: 0px;"><a href="#" class="add-bookmark">добавить ссылку</a></li>
						{% endif %}
                    </ul>
                </li>
				<li><a class="menuNavigationLink" href="/disk">{% trans %}Кибердиск{% endtrans %}</a></li>
				<li class="open-dialog-list">{% trans %}Сообщения{% endtrans %}</li>
                {% if curUser %}
                    {% if curUser.getRole()>0 %}
                        <li>Админка
                        <ul class="subMenuNavigation">
                            <li><a href="/admin/questions">вопросы</a></li>
                            <li><a href="/admin/answers">ответы</a></li>
                            {% if curUser.getRole()>1 %}
                                <li><a href="/admin/articles">статьи</a></li>
                                <li><a href="/admin/srvmsg">серв. сообщ</a></li>
                                <li><a href="/admin/users">пользователи</a></li>
                                <li><a href="/admin/credits">кредиты</a></li>
                            {% endif %}
                        </ul>
                        </li>
                        {% if curUser.getRole()>1 %}
                        <li>Поддержка
                            <ul class="subMenuNavigation">
                                <li><a href="/admin/support/appeals">Жалобы</a></li>
                                <li><a href="/admin/support/ideas">Предложения</a></li>
                            </ul>
                        </li>
                        {% endif %}
                    {% endif %}
                {% endif %}
				<li class="chatInvite">{% trans %}Приглашение в чат{% endtrans %}</li>
                <div id="notepad" style="margin-top: 10px;display:none; width: 272px;">
                    <textarea id="notepad-text" style="height: 200px;width: 189px;resize: none;border: 1px solid #CC2A03;border-radius: 5px;margin-left: -9px;float: left;margin-top: 10px;"></textarea>
                    <div class="closeNotepad"><a href=""></a></div>
                </div>
				<div style="clear: both;">
			</ul>
			<ul class="additional-information">
				<li><a href="/about">О нас</a></li>
				<li><a href="#" class="open-feedback-window">Помощь</a></li>
				<li><a href="/rules">Правила</a></li>
				<li><a href="/advert">Рекламодателям</a></li>
				<li><a href="/agreement">Пользовательское соглашение</a></li>
			</ul>
			<span class="copyright">Aditus © 2012</span>
		</div>
		<div style="clear: both"></div>
	    {% endblock %}
		{% block chat %}
		<div class="chatWrapper">
			<div class="openChat">
				<div class="closeChat"></div>
				<div class="chat-container"></div>
			</div>
		</div>
		<div class="chatWindow">
		<span>Окно чата</span>
		<div class="chatUpButton"></div>
		</div>
		{% endblock %}
	</div>
	{% endblock %}
  </body>
</html>